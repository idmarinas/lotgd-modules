{% trans_default_domain textDomain %}

<div class="center aligned">
    <div class="ui small icon header">
        <img class="icon" style="width: 88px; height: auto;" border="0" src="images/topwebgames-88x31.gif" alt="{{ 'image.alt'|trans(_context)|uncolorize }}">
        <div class="content">
            <p>Top Web Games</p>

            <div class="sub header">
                {% if canVote %}
                    <a href="{{ 'http://www.topwebgames.com/in.asp?id=' ~ id ~ '&acctid=' ~ acctId ~ '&alwaysreward=1' }}" target="_blank" rel="noopener noreferrer">
                        {{ 'twg.vote'|trans(_context)|colorize }}
                    </a>
                {% else %}
                    {{ 'twg.voted'|trans(_context)|colorize }}
                {% endif %}

                <br><br>

                {{ 'votes'|trans(_context)|colorize }}
                {{ 'rank'|trans(_context)|colorize }}
            </div>
        </div>
    </div>
</div>

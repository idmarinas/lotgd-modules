{% trans_default_domain textDomain %}

<!-- Staff list -->
{{ 'section.onlinecharlist.title.staff'|t({ 'n': staff|length })|colorize }}

<!-- Show 5 members of staff -->
{% for row in staff|slice(0, 5) %}
    {{ '`5%s`0`n'|format(row.name)|colorize }}
{% else %}
    {{ 'section.onlinecharlist.none'|t|colorize }}
{% endfor %}

{% if staff|length > 5 %}
    {{'section.onlinecharlist.and.more.staff'|t({ 'n': (staff|length - 5) })|colorize }}
{% endif %}


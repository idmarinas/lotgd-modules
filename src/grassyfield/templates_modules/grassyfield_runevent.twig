{% trans_default_domain textDomain %}

{{ 'paragraph'|trans(_context)|colorize }}

{% if special %}
    {% if hasHorse %}
        {% if isPartialRecharge %}
            {% if mount.partrecharge %}
                {{ mount.partrecharge|colorize }}
            {% else %}
                {{ 'horse.recharge.partial'|trans(_context)|colorize }}
            {% endif %}
        {% else %}
            {% if mount.recharge %}
                {{ mount.recharge|colorize }}
            {% else %}
                {{ 'horse.recharge.full'|trans(_context)|colorize }}
            {% endif %}
        {% endif %}

        {{ 'healed'|trans(_context)|colorize }}

        {% if staminaSystem %}
            {{ 'lost.stamina'|trans(_context)|colorize }}
        {% else %}
            {{ 'lost.turns'|trans(_context)|colorize }}
        {% endif %}
    {% else %}
        {{ 'horse.no'|trans(_context)|colorize }}
    {% endif %}
{% else %}
    {{ 'nothing'|trans(_context)|colorize }}
{% endif %}

{{ commentary_block({
    'section': 'grassyfield'
}, textDomain) }}

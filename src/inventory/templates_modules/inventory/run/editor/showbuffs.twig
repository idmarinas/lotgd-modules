{% trans_default_domain textDomain %}


{% set classOld = '' %}
{% set editButton = 'section.editor.showbuffs.button.edit'|trans|uncolorize %}
{% set deleteButton = 'section.editor.showbuffs.button.delete'|trans|uncolorize %}
{% set delConfirm = { 'text': 'section.editor.showbuffs.del.confirm'|trans|uncolorize }|json_encode %}

<table class="ui very compact striped table">
    <caption>{{ 'section.editor.showbuffs.table.caption'|trans|colorize }}</caption>
    <thead>
        <tr>
            <th scope="col" colspan="30" class="center aligned">{{ 'section.editor.showbuffs.table.th'|trans|colorize }}</th>
        </tr>
    </thead>
    <tbody>
        {% for buff in results %}
        <tr>
            <td class="collapsing">
                <div class="ui mini icon buttons">
                    <a href="{{ ('runmodule.php?module=inventory&op=editor&op2=newbuff&id=' ~ buff.id)|lotgd_url }}" class="ui yellow button" data-tooltip="{{ editButton }}">
                        <i class="edit icon"></i>
                    </a>
                    <a href="{{ ('runmodule.php?module=inventory&op=editor&op2=delbuff&id=' ~ buff.id)|lotgd_url }}" class="ui red button" data-tooltip="{{ deleteButton }}" data-options="{{ delConfirm|e('html_attr') }}" onclick="Lotgd.confirm(this, event)">
                        <i class="trash icon"></i>
                    </a>
                </div>
            </td>
            <td>{{ '`^%s`0 `7-`0 `&`i%sÂ´i`0'|format(buff.key, buff.name)|colorize }}</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% trans_default_domain textDomain %}

{{ 'section.superuser.title'|trans(_context)|colorize }}

<table class="ui very compact striped table">
    <thead>
        <tr>
            <th>{{ 'section.superuser.table.thead.name'|trans|uncolorize }}</th>
            <th>{{ 'section.superuser.table.thead.cost.max'|trans|uncolorize }}</th>
            <th>{{ 'section.superuser.table.thead.cost.min'|trans|uncolorize }}</th>
            <th>{{ 'section.superuser.table.thead.exp.usage'|trans|uncolorize }}</th>
            <th>{{ 'section.superuser.table.thead.exp.level'|trans|uncolorize }}</th>
            <th>{{ 'section.superuser.table.thead.cost.reduction'|trans|uncolorize }}</th>
            <th>{{ 'section.superuser.table.thead.dk'|trans|uncolorize }}</th>
        </tr>
    </thead>
    <tbody>
        {% for name, action in actions %}
            <tr>
                <td>{{ name }}</td>
                <td>{{ action.maxcost|numeral }}</td>
                <td>{{ action.mincost|numeral }}</td>
                <td>{{ aciton.expperrep|numeral }}</td>
                <td>{{ action.expforlvl|numeral }}</td>
                <td>{{ action.costreduction|numeral }}</td>
                <td>{{ action.dkpct }}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
